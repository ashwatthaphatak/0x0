{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DeepFake Defense",
  "version": "0.1.0",
  "identifier": "com.deepfakedefense",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DeepFake Defense",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 650,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: asset: https://asset.localhost blob:; connect-src 'self' https://*.modal.run https://*.modal.com https://accounts.google.com; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/defense-engine"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "defense-engine",
          "cmd": "binaries/defense-engine",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "fs": {
      "scope": [
        "$APPDATA/*",
        "$APPLOCALDATA/*",
        "$TEMP/*"
      ]
    },
    "http": {
      "scope": [
        "https://akshay-3046--deepfake-defense-web.modal.run/*"
      ]
    }
  }
}
