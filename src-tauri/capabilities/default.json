{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for DeepFake Defense",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:allow-version",
    "core:window:allow-start-dragging",
    "fs:allow-read-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-temp-read-recursive",
    "fs:allow-temp-write-recursive",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-kill",
    "http:default",
    "process:allow-exit",
    "process:allow-restart"
  ]
}
